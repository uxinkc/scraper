<div class="fsa-stepped-control fsa-stepped-control--sticky">
	<div class="fsa-stepped-control__bd">

		<div class="fsa-stepped-control__message" role="status">
			<strong>{{ CURRENT_STEP }}</strong> of <strong>{{ TOTAL_STEPS }}</strong> Steps
		</div>

		<div class="fsa-stepped-control__list">
			<div class="fsa-stepped-control__shim"></div>

			<div class="fsa-stepped-control__item">
				<a role="button" href="{{ BACK_URL }}" class="fsa-btn fsa-btn--alt fsa-btn--large fsa-stepped-control__btn" type="button">
					{{ BACK_LABEL }}
				</a>
			</div>
			<div class="fsa-stepped-control__item">
				{{#if USE_GROWL_ON_CANCEL }}
				<button class="fsa-btn fsa-btn--secondary fsa-btn--large"
					data-behavior="growl-show whiteout-show"
					aria-controls="{{ GROWL_ID }}"
					aria-expanded="false"
					type="button">
					Cancel
				</button>
				{{else}}
				<a role="button" href="{{ URL_PREFIX }}index.html" class="fsa-btn fsa-btn--alt fsa-btn--large fsa-stepped-control__btn" type="button">
					Cancel
				</a>
				{{/if}}
			</div>
			<div class="fsa-stepped-control__item">
				{{#if USE_GROWL_ON_SUBMIT }}
				<button role="button"
					data-behavior="growl-show whiteout-show"
					aria-controls="{{ ON_SUBMIT_GROWL_ID }}"
					aria-expanded="false"
					class="fsa-btn fsa-btn--primary fsa-btn--large fsa-stepped-control__btn"
					type="button">
					{{ CONTINUE_LABEL }}
				</button>
				{{else}}
				<a id="demoNextButton" role="button" href="{{ URL_PREFIX }}{{ CONTINUE_URL }}" class="fsa-btn fsa-btn--primary fsa-btn--large fsa-stepped-control__btn" type="button">
					<span class="fsa-stepped-control__btn-label">{{ CONTINUE_LABEL }}</span>
				</a>
				{{/if}}
			</div>

		</div>
	</div>
</div>